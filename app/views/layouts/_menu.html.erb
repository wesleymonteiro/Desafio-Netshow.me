<div class="col-md-12 text-center">
  <h1> Welcome to Video Uploader Challenge! </h1>
  <% if current_user.admin? %>
    <%= link_to "Users", users_path, class: "btn btn-default" %>
    <%= link_to "Videos", videos_path, class: "btn btn-default" %>
  <% else %>
    <%= link_to "Home", videos_path, class: "btn btn-default" %>
  <% end %>
  <%= link_to "Config", edit_user_path(current_user.id), class: "btn btn-default" %>
  <%= link_to "Logout", [:destroy, :user, :session], method: :delete, class: "btn btn-default" %>
</div>
